<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_44000000"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/backgroundColor"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="这家解忧杂货铺，用音乐治愈你！"/>

        <TextView
            android:id="@+id/tv_video_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/color_lighter_gray"
            android:textSize="14sp"
            tools:text="#广告/精选"/>

        <TextView
            android:id="@+id/tv_video_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/color_lighter_gray"
            android:textSize="12sp"
            tools:text="亚当是个喜欢在学校惹是生非的青少年，但他的内心其实很混沌，因为家庭成员不能说的秘密，所以才导致他如此夸张，"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_action_favorites"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_action_favorites"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_lighter_gray"
                tools:text="324"/>

            <TextView
                android:id="@+id/tv_action_share"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_action_share"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_lighter_gray"
                tools:text="324"/>

            <TextView
                android:id="@+id/tv_action_reply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_action_reply"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_lighter_gray"
                tools:text="324"/>

            <TextView
                android:id="@+id/tv_action_offline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_action_offline"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/video_offline"
                android:textColor="@color/color_lighter_gray"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_darker_gray"/>

    <RelativeLayout
        android:id="@+id/layout_author_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_author_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            tools:src="@drawable/default_avatar"/>

        <TextView
            android:id="@+id/tv_attention_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_bt_radius_normal_bg"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:paddingRight="7dp"
            android:paddingBottom="3dp"
            android:text="@string/video_attention"
            android:textColor="@color/color_white"
            android:textSize="12sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_attention_author"
            android:layout_toEndOf="@+id/iv_author_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                tools:text="My name"/>

            <TextView
                android:id="@+id/tv_author_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:singleLine="true"
                android:textColor="@color/color_darker_gray"
                android:textSize="12sp"
                tools:text="发现艺术背后的故事"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_darker_gray"/>

    </RelativeLayout>

</LinearLayout>