<resources>

    <!-- Base application theme. -->
    <style name="KotlinDemoAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashFullScreen" parent="KotlinDemoAppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--CircleImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="type"/>
        <attr name="borderColor"/>
        <attr name="borderWidth"/>
        <attr name="rectRoundRadius"/>
    </declare-styleable>

    <style name="TextLinearStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textSize_content</item>
        <item name="android:textColor">@color/color_9a9a9a</item>
    </style>

    <style name="TextLinearStyle.Title">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/textSize_titleSmall</item>
    </style>

    <style name="TextLinearStyle.Description">
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/textSize_content</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="TextLinearStyle.Layout">
        <item name="android:paddingTop">@dimen/padding_common_v</item>
        <item name="android:paddingBottom">@dimen/padding_common_v</item>
        <item name="android:paddingLeft">@dimen/padding_common_h</item>
        <item name="android:paddingRight">@dimen/padding_common_h</item>
    </style>
</resources>
